<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('Título') %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label :author, t('Autor') %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :pages, t('Número de páginas') %>
    <%= form.number_field :pages, id: :book_pages %>
  </div>

  <div class="field">
    <%= form.label :image, t('Portada') %>
    <%= form.file_field :image, id: :book_image %>
  </div>

  <div class="field">
    <%= form.label :abstract, t('Resumen') %>
    <%= form.text_area :abstract, id: :book_abstract %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, id: :book_user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label :category_id, t('Categoría') %>
    <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
