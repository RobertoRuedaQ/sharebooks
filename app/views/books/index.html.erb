<p id="notice"><%= notice %></p>

<div class="container">
  <%= form_tag(books_path, method: :get, remote: true) do %>
    <%= text_field_tag :term %>
    <%= submit_tag 'Search' %>
  <% end %>
    <br>
  <% @books.each_slice(4) do |group| %>
  <div class="row">
    <% group.each do |book| %>

    <div class="col-sm-3 col-lg-3 col-md-3">
      <div class="thumbnail">
        <%= image_tag("#{book.image_url}" , height: '80', width: '60')  %>
       <div class="caption">
        <h4><%= book.title %></h4>
        <h5>(<%= book.pages %> pag.) <%= book.author %></h5>
        <p><%= book.abstract %></p>
        <div class="row">
          <div class="col-sm-6">
            <%= link_to "Like", like_book_path(book), method: :put, class: "btn btn-success " %>
          </div>
          <div class="col-sm-6">
            <%= link_to "Dislike", dislike_book_path(book), method: :put, class: "btn btn-warning" %>
          </div>
        </div>
       </div>
      </div>
   </div>
    <% end %>
  </div>
  <% end %>
  <br>
</div>

