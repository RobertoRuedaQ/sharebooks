<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_tag(books_path, method: :get, remote: true) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search' %>
<% end %>


<% @books.each do |book| %>
<div id="movie-card-list" style="background-image: book.image_url">
  <!-- Card 1: Blade Runner -->
  <div class="movie-card">
    <div class="color-overlay">
      <div class="movie-content">
        <div class="movie-header">
          <h1 class="movie-title"><%= book.title %></h1>
          <h4 class="movie-info">(<%= book.pages %>) <%= book.author %></h4>
        </div>
        <p class="movie-desc"><%= book.abstract %></p>
        <%= link_to "me gusta", like_book_path(book), method: :put, class: "btn btn-success btn-xs" %>
        <%= link_to "naaaah", dislike_book_path(book), method: :put, class: "btn btn-warning btn-xs" %>

      </div>
    </div>
  </div>
<% end %>
</div>

<br>

<%= link_to 'New Book', new_book_path %>
