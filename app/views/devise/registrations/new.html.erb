<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="col-md-12">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :email, t('Correo electrónico') %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, t('Contraseña') %>
          <% if @minimum_password_length %>
          <em>Mínimo (<%= @minimum_password_length %>) caracteres</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, t('Confirmar contraseña') %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :first_name, t('Nombre') %><br />
          <%= f.text_field :first_name, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :last_name, t('Apellido') %><br />
          <%= f.text_field :last_name, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :age, t('Edad') %><br />
          <%= f.number_field :age, autocomplete: "off" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="field">
          <%= f.label :interests, t('Intereses')%><br />
          <%= f.collection_check_boxes :interests, Category.all, :id, :name do |b| %>
            <%= b.label  %>
            <%= b.check_box %>
          <%end %>  
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>

<% end %>


<%= render "devise/shared/links" %>
